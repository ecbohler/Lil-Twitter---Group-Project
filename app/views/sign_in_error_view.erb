<div class="container">
  <h1>You have entered incorrect data. Please try again.</h1>
  <h2>Sign In</h2>

  <% if @error %>
    <div class="errors"><%= @error %></div>
  <% end %>

  <form id="sign-in" method="post" action="/sessions">
    <label class="label" for="handle">Handle</label>
    <input type="handle" name="handle" placeholder="e.g., @example" value="<%= @handle %>"><br>
    <label class="label" for="password">Password</label>
    <input type="password" name="password" placeholder="6 or more characters">
    <br>
    <div class="submit"><input type="submit" value="Sign In"></div>
  </form>

</div>


